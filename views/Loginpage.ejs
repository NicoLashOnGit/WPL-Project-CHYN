<%- include("partials/header") %>

<main id="Login">
    <article id="LoginMenu">
        <img src="/Images/Logos/fn_logo_met_hamer_copy.png" alt="" id="loginLogo">
        <h2 id="LoginMenuTitle">Sign In</h2>
        <form action="/login" method="POST" id="loginForm">
            <label for="email">Email Address:</label><br>
            <input type="email" id="email" name="email" required><br>

            <label for="password">Password:</label><br>
            <input type="password" id="password" name="password" required><br>

            <button type="submit" id="LogInButton">Log in</button>
        </form>

        <a href="#" class="loginLink">Forgot Password?</a> 

        <section id="socialsLogins">
            <button id="facebookLogin" class="SocialsLoginBtns">
                <img src="Images/Icons/Facebook LoginIcon.png" class="SocialsLoginImages">
            </button>
        </section>

        <a href="/RegistrationPage" class="loginLink">Create Account</a>
        <a href="#" class="loginLink">Privacy Policy</a>
    </article>
</main>

<script>
  document.getElementById('loginForm').addEventListener('submit', function(event) {
    // Als login succesvol zou zijn, dan zou je dit hier kunnen zetten:
    // Bijvoorbeeld, hier zetten we gewoon bij elke submit dat je 'ingelogd' bent
    // Dit is enkel frontend, zonder server check!

    localStorage.setItem('loggedIn', 'true');

    // Het formulier wordt gewoon verstuurd, dus server doet de echte login check
  });

  // Optioneel: check bij het laden van de pagina of user al ingelogd is
  window.addEventListener('load', function() {
    if (localStorage.getItem('loggedIn') === 'true') {
      alert('Je bent al ingelogd!');
      // Hier kan je bijvoorbeeld redirecten naar een andere pagina
      // window.location.href = '/Homepage';
    }
  });
</script>

